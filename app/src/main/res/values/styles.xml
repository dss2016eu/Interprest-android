<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppNoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>

    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily"></item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="TextFontLarger" parent="AppFont">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="TextFontLarge" parent="AppFont">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextFontNormal" parent="AppFont">
        <item name="android:textSize">@dimen/font_normal</item>

    </style>

    <style name="TextFontSmall" parent="AppFont">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextFontSmaller" parent="AppFont">
        <item name="android:textSize">@dimen/font_smaller</item>
    </style>

    <style name="TextDefault" parent="AppFont">
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="SubTextDefault" parent="AppFont">
        <item name="android:textSize">@dimen/font_smaller</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
